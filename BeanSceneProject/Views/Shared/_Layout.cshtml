<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeanSceneProject</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BeanSceneProject.styles.css" asp-append-version="true" />
    <link href="~/lib/bootswatch/bootstrap.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/bootswatch/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/stylesheet.css" rel="stylesheet" />
    <link href="~/css/dropdownbackground.css" rel="stylesheet" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand bi bi-house" asp-area="" asp-controller="Home" asp-action="Index"> Home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if(User.IsInRole("Manager")) 
                        {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Staff</a>
                                <div class="dropdown-menu bg-primary">
                                    <a class="dropdown-item text-light bi bi-calendar-event" asp-area="Administration" asp-controller="Sitting" asp-action="ViewSitting"> Sittings</a>
                                    <a class="dropdown-item text-light bi bi-cup-hot" asp-area="Administration" asp-controller="Restaurant" asp-action="ViewRestaurant"> Restaurant</a>
                                    <a class="dropdown-item text-light bi bi-calendar-event-fill" asp-area="Administration" asp-controller="Reservation" asp-action="ViewReservation"> Reservations</a>
                                    <a class="dropdown-item text-light bi bi-person-square" asp-area="Administration" asp-controller="Member" asp-action="ViewMember"> Members</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item text-light bi bi-gear-fill" asp-area="Administration" asp-controller="Setting" asp-action="ViewSettings"> Settings</a>
                                    </div>
                        </li>

                        }
                        @if (User.IsInRole("Staff"))
                        {
                            <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Staff</a>
                                <div class="dropdown-menu bg-primary">
                                    <a class="dropdown-item text-light bi bi-calendar-event" asp-area="Administration" asp-controller="Sitting" asp-action="ViewSitting"> Sittings</a>
                                    <a class="dropdown-item text-light bi bi-cup-hot" asp-area="Administration" asp-controller="Restaurant" asp-action="ViewRestaurant"> Restaurant</a>
                                    <a class="dropdown-item text-light bi bi-calendar-event-fill" asp-area="Administration" asp-controller="Reservation" asp-action="ViewReservation"> Reservations</a>
                                    <a class="dropdown-item text-light bi bi-person-square" asp-area="Administration" asp-controller="Member" asp-action="ViewMember"> Members</a>
                                    <a class="dropdown-item text-light bi bi-gear-fill" asp-area="Administration" asp-controller="Setting" asp-action="ViewSettings"> Settings</a>
                                    </div>
                        </li>

                        }
                         @if (User.IsInRole("Member"))
                         {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Membership" asp-controller="Home" asp-action="Index">Members</a>
                        </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AddReservation">Make a Reservation</a>
                        </li>
                        <li class="nav-item">  @* un-hide *@
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Insta">Photos</a>
                        </li>

                        @*Page to test code*@
@*                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="TestPage">Testing</a>
                        </li>*@
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-bg-primary bg-primary">
        <div class="container">
            &copy; 2023 - Powered By MouseClique - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
