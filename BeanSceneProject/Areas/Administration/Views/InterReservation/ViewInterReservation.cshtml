@model BeanSceneProject.Areas.Administration.Models.ReservationModel
@{
    ViewData["Title"] = "ViewInterReservation";
}
<h1></h1>
<html>
<head>
    <style>
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }
        .tables {
            border: 4px solid gray;
            border-radius: 5px;
            padding: 25px;
            text-align: center;
        }

        .tablesCss {
            border: 4px solid gray;
            border-radius: 5px;
            padding: 25px;
            text-align: center;
            margin: 1ex;
        }

        .newTables{
            border: 4px solid gray;
            border-radius: 5px;
            padding: 25px;
            text-align: center;
        }
        #mainId {
            border: 4px solid gray;
            border-radius: 5px;
            padding: 25px;
            text-align: center;
        }
        .highlight {
            background-color: green;
            color: white;
            border: 3px solid grey;
        }

        .reserve {
            border: 3px solid black;
        }

        .table2 {
            border: 3px solid black;
            display: inline-table;
        }

        .droppable {
            display: inline-table;
            border: 3px solid black;
            text-align: center;
        }

        /* .reservationId{
                    width:100px;
                    border: 4px solid gray;
                    border-radius: 5px;
                }*/

        .completeStatus{
            border: 3px solid black;
            list-style-type: none;
        }
    </style>
</head>

<body>

    <div>
        <label>Dining Area</label>
        <select id="table-id" onchange="GetTables();">
            <option value="GetTables()">Please Select</option>
            @foreach (var d in Model.DiningAreas)
            {
                <option value="@d.Id">@d.DiningName </option>
            }
        </select>

    </div>
    <div class="container-fluid mb-3">
        <h1>Reservation</h1>
        <div class="row">
            <div class="col-sm-2 table2" style="background-color: white">
                <h2> Table</h2>
                <div class="tables mb-3" id="mytableId" onchange="GetTables();">
                    Table
                    <ul class="tableId">
                    </ul>
                </div>

                <h2>Reservation</h2>
                <div class="reservation mb-3">
                    <ul id="source">
                        @foreach (var r in Model.Reservations)
                        {
                            <li id="reservationId" reservation-id="@r.Id">
                                @r.ReservationName
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-sm-8 droppable" id="mainId" style="background-color: white" >
                <h2>Areas</h2>
                <div>
                    <ul>

                    </ul>
                </div>
            </div>
            <div class="col-sm-2 completeStatus">
                <h2>Reservation Completed</h2>
                <div id="newreservationId">
                    <ul>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts{

    <script src="~/reservation.js"></script>
    }
</html>

