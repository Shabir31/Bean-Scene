@model DiningArea
@{
    ViewData["Title"] = "EditDiningArea";
}

<h1>Edit A Dining Area</h1>

<hr />

<form asp-controller="DiningArea" asp-action="EditDiningArea" method="post" autocomplete="off" class="p-5">

    <div class="mb-3">
        <label class="form-label"> Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label"> Dining Area Name</label>
        <input type="text" class="form-control" asp-for=DiningName />
        <span asp-validation-for="DiningName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label"> Restaurant Name </label>
        @Html.DropDownListFor(m=>m.RestaurantId, ViewBag.RestaurantVB as SelectList)
        <span asp-validation-for="RestaurantId" class="text-danger"></span>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>
