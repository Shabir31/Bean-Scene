@model IEnumerable<Restaurant>
@{
    ViewData["Title"] = "View Restaurants";
}

<h1>Restaurants</h1>

<hr />

<form class="p-5">
    <button asp-action="AddRestaurant" asp-controller="Restaurant" class="btn btn-primary mb-3" style="margin-right:3ex">New Restaurant</button>
    <button asp-action="ViewDiningArea" asp-controller="DiningArea" class="btn btn-primary mb-3" style="margin-right:3ex">View Dining Area</button>
    <button asp-action="ViewRestaurantTable" asp-controller="RestaurantTable" class="btn btn-primary mb-3">View Restaurant Table</button>
    <table class="table-responsive table-hover table-bordered" style="width:100%">
        <thead>
            <tr class="active" style="color:white; background-color: steelblue">
                <th class="text-center">Restaurant Name</th>
                <th class="text-center" style="width:15%">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var restaurants in Model)
                {
                    <tr>
                        <td class="text-center">@restaurants.RestaurantName</td>
                        <td class="text-center">
                            <div class="btn btn-sm">
                                <a asp-action="EditRestaurant" asp-controller="Restaurant" asp-route-id="@restaurants.Id" class="btn btn-outline-primary" style="margin-right:1ex">Edit</a>
                                <a asp-action="DeleteRestaurant" asp-controller="Restaurant" asp-route-id="@restaurants.Id" class="btn btn-outline-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="text-center" colspan="12">
                        <div>No restaurants available at the moment</div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>