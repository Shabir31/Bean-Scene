@model Restaurant
@{
    ViewData["Title"] = "DeleteRestaurant";
}

<h1>Delete A Restaurant</h1>

<hr />

<form asp-controller="Restaurant" asp-action="DeleteRestaurant" method="post" autocomplete="off" class="p-5">

    <div class="mb-3">
        <label class="form-label"> Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Restaurant Name</label>
        <input type="text" class="form-control" asp-for="RestaurantName" readonly />
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>