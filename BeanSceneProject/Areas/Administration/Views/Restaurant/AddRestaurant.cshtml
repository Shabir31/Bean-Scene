@model Restaurant
@{
    ViewData["Title"] = "AddRestaurant";
}

<h1>Add A Restaurant</h1>

<hr />

<form asp-controller="Restaurant" asp-action="AddRestaurant" method="post" autocomplete="off">
    <div class="mb-3">
        <label class="form-label">Restaurant Name</label>
        <input type="text" class="form-control" asp-for="RestaurantName" />
        <span asp-validation-for="RestaurantName" class="text-danger" />
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>