
@{
    ViewData["Title"] = "Report";
}

<h1>Report</h1>

<hr/>

<div class="p-5">
  <canvas id="myChart"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  const ctx = document.getElementById('myChart');

  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['Pending', 'Confirmed', 'Seated', 'Completed', 'Cancelled'],
      datasets: [{
        label: 'Reservation Statuses',
        data: [4, 3, 1, 1, 1],
        borderWidth: 1
      }]
    },
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });
</script>
