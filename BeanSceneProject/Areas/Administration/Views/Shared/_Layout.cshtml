<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeanSceneProject</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.css" />
    <link href="~/lib/bootstrap-datetimepicker/css/tempus-dominus.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BeanSceneProject.styles.css" asp-append-version="true" />
    <link href="~/lib/bootswatch/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootswatch/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/custombuttoncss.css" rel="stylesheet" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="nav-link navbar-brand bi bi-house" asp-area="" asp-controller="Home" asp-action="Index"> Home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
@*                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Administration" asp-controller="Home" asp-action="Index">Staff</a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link bi bi-calendar-event" asp-area="Administration" asp-controller="Sitting" asp-action="ViewSitting"> Sittings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link bi bi-cup-hot" asp-area="Administration" asp-controller="Restaurant" asp-action="ViewRestaurant"> Restaurant</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link bi bi-calendar-event-fill" asp-area="Administration" asp-controller="Reservation" asp-action="ViewReservation"> Reservations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link bi bi-person-square" asp-area="Administration" asp-controller="Member" asp-action="ViewMember"> Members</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link bi-gear-fill" asp-area="Administration" asp-controller="Setting" asp-action="ViewSettings"> Settings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link bi-file-bar-graph" asp-area="Administration" asp-controller="Home" asp-action="Report"> Report</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 gy-5">
            @RenderBody()
        </main>

    </div>

    <footer class="border-top footer text-bg-primary bg-primary">
        <div class="container">
            &copy; 2023 - Powered By MouseClique - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/js/solid.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/js/fontawesome.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/lib/jquery/dist/jquery-ui.js"></script>
    <script src="~/lib/bootstrap-datetimepicker/js/tempus-dominus.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
