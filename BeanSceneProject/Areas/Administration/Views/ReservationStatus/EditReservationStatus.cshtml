@model ReservationStatus
@{
    ViewData["Title"] = "EditReservationStatus";
}

<h1>Edit A Reservation Status</h1>

<hr />

<<form asp-controller="ReservationStatus" asp-action="EditReservationStatus" method="post" autocomplete="off" class="p-5">

    <div class="mb-3">
        <label class="form-label"> Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label"> Reserve Status</label>
        <input type="text" class="form-control" asp-for=ReservationStatusName />
        <span asp-validation-for="ReservationStatusName" class="text-danger"></span>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>
