@model RestaurantTable
@{
    ViewData["Title"] = "EditRestaurantTable";
}

<h1>Edit A Restaurant Table</h1>

<hr />

<form asp-controller="RestaurantTable" asp-action="EditRestaurantTable" method="post" autocomplete="off" class="p-5">

    <div class="mb-3">
        <label class="form-label"> Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label"> Restaurant Table Name</label>
        <input type="text" class="form-control" asp-for=SeatName />
        <span asp-validation-for="SeatName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label"> Dining Area Name </label>
        @Html.DropDownListFor(m=>m.DiningAreaId, ViewBag.DiningAreaVB as SelectList)
        <span asp-validation-for="DiningAreas" class="text-danger"></span>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>
