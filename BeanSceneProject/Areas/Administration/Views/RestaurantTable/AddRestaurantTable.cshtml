@model RestaurantTable
@{
    ViewData["Title"] = "AddRestaurantTable";
}

<h1>Add A Restaurant Table</h1>

<hr />

<form asp-controller="RestaurantTable" asp-action="AddRestaurantTable" method="post" autocomplete="off" class="p-5">
    <div class="mb-3">
        <label class="form-label">Restaurant Table Name</label>
        <input type="text" class="form-control" asp-for="SeatName" />
        <span asp-validation-for="SeatName" class="text-danger" />
    </div>
    <div class="mb-3">
        <label class="form-label">Dining Area Name</label>
        @Html.DropDownListFor(m=>m.DiningAreaId, ViewBag.DiningAreaVB as SelectList)
        <span asp-validation-for="DiningAreaId" class="text-danger" />
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>