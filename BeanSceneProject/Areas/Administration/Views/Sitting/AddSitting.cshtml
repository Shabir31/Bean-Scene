@model Sitting
@{
    ViewData["Title"] = "AddSitting";
}

<h1>Add A New Sitting</h1>

<hr />

<form asp-controller="Sitting" asp-action="AddSitting" method="post" autocomplete="off" class="p-5">
    <div class="mb-3">
        <label class="form-label">Sitting Name</label>
        <input type="text" class="form-control" asp-for="SittingName" />
        <span asp-validation-for="SittingName" class="text-danger" />
    </div>
    <div class="mb-3">
        <label class="form-label">Start Time</label>
        <input type="datetime-local" class="form-control" asp-for="StartTime" />
        <span asp-validation-for="StartTime" class="text-danger" />
    </div>
    <div class="mb-3">
        <label class="form-label">End Time</label>
        <input type="datetime-local" class="form-control" asp-for="EndTime" />
        <span asp-validation-for="EndTime" class="text-danger" />
    </div>
    <div class="mb-3">
        <label class="form-label">Capacity</label>
        <input type="number" class="form-control" asp-for="Capacity" />
        <span asp-validation-for="Capacity" class="text-danger" />
    </div>
    <div class="mb-3">
        <label class="form-label">Active</label>
        <input type="checkbox" checked asp-for="Active" />
        <span asp-validation-for="Active" class="text-danger" />
    </div>
    <div class="mb-3">
        <label class="form-label">Restaurant Name</label>
        @Html.DropDownListFor(m=>m.RestaurantId, ViewBag.RestaurantVB as SelectList)
        <span asp-validation-for="RestaurantId" class="text-danger" />
    </div>
    <div class="mb-3">
        <label class="form-label">Sitting Name</label>
        @Html.DropDownListFor(m=>m.SittingTypeId, ViewBag.SittingTypeVB as SelectList)
        <span asp-validation-for="SittingTypeId" class="text-danger" />
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>