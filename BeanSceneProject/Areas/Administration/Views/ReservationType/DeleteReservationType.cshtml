@model ReservationType
@{
    ViewData["Title"] = "DeleteReservationType";
}

<h1>Delete A Reservation Type</h1>

<hr />

<form asp-controller="ReservationType" asp-action="DeleteReservationType" method="post" autocomplete="off" class="p-5">

    <div class="mb-3">
        <label class="form-label"> Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Reservation Type Name</label>
        <input type="text" class="form-control" asp-for="ReservationTypeName" readonly />
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>