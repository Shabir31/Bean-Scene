@model ReservationType
@{
    ViewData["Title"] = "EditReservationType";
}

<h1>Edit A Reservation Type</h1>

<hr />

<form asp-controller="ReservationType" asp-action="EditReservationType" method="post" autocomplete="off" class="p-5">

    <div class="mb-3">
        <label class="form-label"> Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label"> Reserve Type Name</label>
        <input type="text" class="form-control" asp-for=ReservationTypeName />
        <span asp-validation-for="ReservationTypeName" class="text-danger"></span>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>
