@model ReservationType
@{
    ViewData["Title"] = "AddReservationType";
}

<h1>Add A Reservation Type</h1>

<hr />

<form asp-controller="ReservationType" asp-action="AddReservationType" method="post" autocomplete="off" class="p-5">
    <div class="mb-3">
        <label class="form-label">Reservation Type Name</label>
        <input type="text" class="form-control" asp-for="ReservationTypeName" />
        <span asp-validation-for="ReservationTypeName" class="text-danger" />
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>