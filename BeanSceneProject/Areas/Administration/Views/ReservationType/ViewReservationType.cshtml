@model IEnumerable<ReservationType>
@{
    ViewData["Title"] = "ViewReservationType";
}

<h1>Reservation Types</h1>

<hr />

<form class="p-5">
    <button asp-action="AddReservationType" asp-controller="ReservationType" class="btn btn-primary mb-3" style="margin-right:3ex">Add Reservation Type</button>
    <button asp-action="ViewReservation" asp-controller="Reservation" class="btn btn-primary mb-3">Back</button>
    <table class="table-responsive table-hover table-bordered" style="width:100%">
        <thead>
            <tr class="active" style="color:white; background-color: steelblue">
                <th class="text-center">Reservation Type</th>
                <th class="text-center" style="width:15%">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var reservationTypes in Model)
                {
                    <tr>
                        <td class="text-center">@reservationTypes.ReservationTypeName</td>
                        <td class="text-center">
                            <div class="btn btn-sm">
                                <a asp-action="EditReservationType" asp-controller="ReservationType" asp-route-id="@reservationTypes.Id" class="btn btn-outline-primary" style="margin-right:1ex">Edit</a>
                                <a asp-action="DeleteReservationType" asp-controller="ReservationType" asp-route-id="@reservationTypes.Id" class="btn btn-outline-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="text-center" colspan="12">
                        <div>No reservation types available at the moment</div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>