@model SittingType
@{
    ViewData["Title"] = "EditSittingType";
}

<h1>Edit A Sitting Type</h1>

<hr />

<form asp-controller="SittingType" asp-action="EditSittingType" method="post" autocomplete="off" class="p-5">

    <div class="mb-3">
        <label class="form-label"> Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label"> Name</label>
        <input type="text" class="form-control" asp-for=SittingTypeName />
        <span asp-validation-for="SittingTypeName" class="text-danger"></span>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>


