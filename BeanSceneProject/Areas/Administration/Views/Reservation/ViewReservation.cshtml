@model IEnumerable<Reservation>
@{
    ViewData["Title"] = "ViewReservation";
}

<h1>Reservations</h1>

<hr />


<form class="p-5">

            <button asp-action="AddReservation" asp-controller="Reservation" class="btn btn-primary mb-3" style="margin-right:3ex">New Reservation</button>
            <button asp-action="ViewReservationType" asp-controller="ReservationType" class="btn btn-primary mb-3" style="margin-right:3ex">View Reservation Type</button>
            <button asp-action="ViewReservationStatus" asp-controller="ReservationStatus" class="btn btn-primary mb-3" style="margin-right:3ex">View Reservation Status</button>
            <button asp-action="ViewInterReservation" asp-controller="InterReservation" class="btn btn-primary mb-3">Interactive Reservation</button>


    <table class="table table-responsive table-hover table-bordered" style="width:100%">
        <thead>
            <tr class=" active" style="color:white; background-color: steelblue">
                <th class="text-center">Reservation Name</th>
                <th class="text-center">Start Time</th>
                <th class="text-center">Guests</th>
                <th class="text-center">Comments</th>
                <th class="text-center">Sitting Name</th>
                <th class="text-center">Status</th>
                <th class="text-center">Type</th>
                <th class="text-center">Member</th>
                <th class="text-center" style="width:15%">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var reservations in Model)
                {
                    <tr>
                        <td class="text-center">@reservations.ReservationName</td>
                        <td class="text-center">@reservations.StartTime</td>
                        <td class="text-center">@reservations.NoOfGuests</td>
                        <td class="text-center">@reservations.Comments</td>
                        <td class="text-center">@reservations.Sitting.SittingName</td>
                        <td class="text-center">@reservations.ReservationStatus.ReservationStatusName</td>
                        <td class="text-center">@reservations.ReservationType.ReservationTypeName</td>
                        <td class="text-center">@reservations.Member.FirstName</td>
                        <td class="text-center">
                            <div class="btn btn-sm">

                                <a asp-controller="Reservation" asp-action="EditReservation" asp-route-id="@reservations.Id" class="btn btn-outline-primary" style="margin-right:1ex">Edit</a>
                                 <a asp-controller="Reservation" asp-action="DeleteReservation" asp-route-id="@reservations.Id" class="btn btn-outline-danger">Delete</a>

                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="text-center" colspan="12">
                        <div>No reservations available at the moment</div>
                    </td>
                </tr>
            }

        </tbody>

    </table>

</form>
