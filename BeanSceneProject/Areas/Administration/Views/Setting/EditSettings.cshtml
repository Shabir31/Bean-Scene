@model RoleCode

@{
    ViewData["Title"] = "EditSettings";
}

<h1>Edit Codes</h1>

<form asp-controller="Setting" asp-action="EditSettings" method="post" autocomplete="off" class="p-5">

    <div class="mb-3">
        <label class="form-label"> Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Manager Code</label>
        <input type="text" class="form-control" asp-for=ManagerCode />
        <span asp-validation-for="ManagerCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Staff Code</label>
        <input type="text" class="form-control" asp-for=StaffCode />
        <span asp-validation-for="StaffCode" class="text-danger"></span>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>
