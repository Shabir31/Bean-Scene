@model IEnumerable<RoleCode>

@{
    ViewData["Title"] = "ViewSettings";
}

<h1>Settings</h1>

<hr />

<form class="p-5">
    <table class="table-responsive table-hover table-bordered" style="width:100%">
        <thead>
            <tr class="active" style="color:white; background-color: steelblue">

                <th class="text-center">Manager Code</th>
                <th class="text-center">Staff Code</th>
                <th class="text-center" style="width:15%">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var code in Model)
                {
                    <tr>

                        <td class="text-center">@code.ManagerCode</td>
                        <td class="text-center">@code.StaffCode</td>
                        <td class="text-center">
                            <div class="btn btn-sm">
                                <a asp-action="EditSettings" asp-controller="Setting" asp-route-id="@code.Id" class="btn btn-outline-primary">Edit</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="text-center" colspan="12">
                        <div>No restaurant tables available at the moment</div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>